{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "target": "es2022",
    "typeRoots": ["node_modules/@types"],
    "plugins": [{
      "transform": "./dist/transformer"
    }],
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
